<%= simple_form_for @unkai_photo, :html => { :class => 'form-horizontal' } do |f| %>
  <%= f.input :image %>
  <%= error_span(@unkai_photo[:image]) %>
  <%= f.input :comment %>
  <%= error_span(@unkai_photo[:comment]) %>
  <%= f.input :photo_time %>
  <%= error_span(@unkai_photo[:photo_time]) %>
  <%= f.input :date, as: :string, input_html: { class: "datepicker", value: Date.today } %>
  <!-- <%= f.input :date %> -->
  <%= error_span(@unkai_photo[:date]) %>
<br>
  <%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                unkai_photos_path, :class => 'btn btn-default' %>
<% end %>
