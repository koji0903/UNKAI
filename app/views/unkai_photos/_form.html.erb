<%= simple_form_for(@unkai_photo) do |f| %>
  <%= f.error_notification %>

  <div class="field">
  	<% if @unkai_photo.image? %>
  		<div class="thumbnail">
			<%= image_tag @unkai_photo.image.url %>
  		</div>
  	<% end  %><br>
  	<%= f.label :image %>
  	<%= f.file_field :image %>
  	<%= f.hidden_field :image_cache %>
  </div>

  <div class="form-inputs">
    <%= f.input :comment %>
    <%= f.input :date %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
