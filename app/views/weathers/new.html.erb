<%- model_class = Weather -%>
<div class="page-header">
  <h1><%=t '.title', :default => [:'helpers.titles.new', '%{model} 読み込み'], :model => model_class.model_name.human.titleize %></h1>
</div>

<h2>読み込みファイル</h2>
<% @weather_data.each do |elem| %>
	ファイル名：<%=  elem.file_name %>
	<ul>
		<li>地区：<%= elem.area %></li>
		<li>期間：<%= elem.data[0][0] %>〜<%= elem.data[elem.data.length-1][0] %></li>
	</ul>
<% end unless @weather_data.nil? %>

<p><strong><font color="red">実行しないで下さい！</font></strong></p>
<%= simple_form_for @weather, :html => { :class => 'form-horizontal' } do |f| %>
<%= f.button :submit, :class => 'btn-primary' %>
  <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                weathers_path, :class => 'btn btn-default' %>
<% end %>
